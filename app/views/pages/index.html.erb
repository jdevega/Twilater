<div class="container-fluid offset1 page">
  <div class="row-fluid">
    <div class="span2 text-left">
      <%= link_to_previous_page_for @page, :id => "previous" %>
    </div>
    <div class="span7 text-center">
      <%= render 'actions' %>
    </div>
    <div class="span2 text-right">
      <%= link_to_next_page_for @page, :id => "next" %>
    </div>
  </div>
  <div class="row-fluid">
    <%= render @page if @page %>
  </div>
</div>